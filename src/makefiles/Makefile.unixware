AROPT = crs
export_dynamic = -Wl,-Bexport
ifneq (,$(findstring uw7.1, $(host_os)))
rpath = -Wl,-R$(libdir)
endif
DLSUFFIX = .so
ifeq ($(GCC), yes)
CFLAGS_SL = -fpic
else
CFLAGS_SL = -K PIC
endif
ifeq ($(GXX), yes)
CXXFLAGS_SL = -fpic
else
CXXFLAGS_SL = -K PIC
endif

%.so: %.o
	$(LD) -G -Bdynamic -o $@ $<
