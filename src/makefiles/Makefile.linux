CFLAGS	= -I$(SRCDIR)/include -I/usr/include/ncurses -I/usr/include/readline -Dlinuxalpha -Wall -Wstrict-prototypes -O2 -fomit-frame-pointer
ifdef LINUX_ELF
# test for __ELF__ in C code so do not need LINUX_ELF defined
