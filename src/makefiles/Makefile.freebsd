ifdef ELF_SYSTEM
LDFLAGS+=	-export-dynamic
endif

%.so: %.o
ifdef ELF_SYSTEM
	$(LD) -x -shared -o $@ $<
else
	$(LD) -x -r -o $<.obj $<
	@echo building shared object $@
	@rm -f $@.pic
	@${AR} cq $@.pic `lorder $<.obj | tsort`
	${RANLIB} $@.pic
	@rm -f $@
	$(LD) -x -Bshareable -Bforcearchive -o $@ $@.pic
endif

