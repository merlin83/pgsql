if test "$GCC" != yes ; then
  case $host_os in
    aix3.2.5 | aix4.1*)
      CFLAGS="-O -qmaxmem=16384 -qsrcmsg"
      ;;
    *)
      CFLAGS="-O2 -qmaxmem=16384 -qsrcmsg -qlonglong"
      ;;
  esac
fi

# native memset() is faster, 2006-02-03
# XLC 6.0, (IBM's cc), tested on AIX 5.2 and 5.1
MEMSET_LOOP_LIMIT=0
