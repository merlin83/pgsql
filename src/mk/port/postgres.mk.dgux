ifndef MK_PORT
MK_PORT=	linux

RANLIB=		ranlib
SLSUFF=		.so
#LDFLAGS+=	-rdynamic


CFLAGS_SL=	-fpic
%.so:  %.o
	cd $(objdir); $(CC) -shared -o $(@F) $(<F)

#
# for postgres.mk
#
CC=		gcc
CFLAGS_OPT=	-O2 -pipe

CFLAGS_BE= -D__USE_POSIX_SIGNALS -DUSE_POSIX_SIGNALS -O2
LDADD_BE= -ldl -lfl

LEX = flex
YACC = bison -y

INSTALL=/usr/bin/X11/bsdinst

endif
