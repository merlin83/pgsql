ifndef MK_PORT
MK_PORT=	svr4

#
# for postgres.mk
#
CFLAGS_BE+= -DUSE_POSIX_SIGNALS

# MAKE_EXPORTS is required for svr4 loaders that want a file of
# symbol names to tell them what to export/import.
MAKE_EXPORTS= true

#
# for postgres.user.mk
#
CFLAGS_SL=	-K pic
SLSUFF=		.so

%.so:  %.o
	$(LD) -G $(LDFLAGS) -o $(objdir)/$(@F) $(objdir)/$(<F)

endif
