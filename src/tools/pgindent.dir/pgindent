/tmp/$$a >/tmp/$$ 2>&1
	if [ "$?" -ne 0 -o -s /tmp/$$ ]
	then	echo "$FILE"
		cat /tmp/$$
	fi
	cat /tmp/$$a |
	sed 's;^/\*\(DATA(.*\)\*/$;\1;' |
	sed 's;/\*---X_X;/* ---;g' |
	sed 's;^static[ 	][ 	]*;static ;g' | # workaround indent bug
	detab -t8 -qc |
	entab -t4 -qc >/tmp/$$ && cat /tmp/$$ >$FILE
done

# The 'for' loop makes these backup files useless
# so delete them
rm -f *a.BAK
