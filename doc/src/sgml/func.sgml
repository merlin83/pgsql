       <entry>subtraction</entry>
       <entry>2 - 3</entry>
       <entry>-1</entry>
      </row>

      <row>
       <entry> <literal>*</literal> </entry>
       <entry>multiplication</entry>
       <entry>2 * 3</entry>
       <entry>6</entry>
      </row>

      <row>
       <entry> <literal>/</literal> </entry>
