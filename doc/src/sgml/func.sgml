      </row>

      <row>
       <entry> <literal>|</literal> </entry>
       <entry>binary OR</entry>
       <entry>32 | 3</entry>
       <entry>35</entry>
      </row>

      <row>
       <entry> <literal>#</literal> </entry>
       <entry>binary XOR</entry>
       <entry>17 # 5</entry>
       <entry>20</entry>
      </row>

      <row>
       <entry> <literal>~</literal> </entry>
       <entry>binary NOT</entry>
       <entry>~1</entry>
       <entry>-2</entry>
      </row>

      <row>
