--	of the 'create operator' commands are commented out.  This
--	is because they reference as yet undefined operators, and
--	will be implicitly defined when those are, further down.
--

create operator < (
	leftarg = isbn,
	rightarg = isbn,
--	negator = >=,
	procedure = isbn_lt
);

create operator <= (
	leftarg = isbn,
	rightarg = isbn,
--	negator = >,
	procedure = isbn_le
);

create operator = (
	leftarg = isbn,
	rightarg = isbn,
	commutator = =,
--	negator = <>,
	procedure = isbn_eq
);

create operator >= (
	leftarg = isbn,
	rightarg = isbn,
